<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.open.modeselektor.Selektor">

    <RadioGroup android:id="@+id/rdbgroup1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/selektor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            tools:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <RadioButton android:id="@+id/rdb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rdb1"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="onRadioButtonClicked"
            android:layout_marginBottom="5dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RadioButton android:id="@+id/rdb2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/rdb2"
            android:duplicateParentState="false"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="onRadioButtonClicked"
            android:layout_marginBottom="5dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RadioButton android:id="@+id/rdb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rdb3"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="onRadioButtonClicked"
            android:layout_marginBottom="5dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RadioButton android:id="@+id/rdb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rdb4"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="onRadioButtonClicked"
            android:layout_marginBottom="5dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RadioButton android:id="@+id/rdb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rdb5"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="onRadioButtonClicked"
            android:layout_marginBottom="5dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </RadioGroup>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rdbgroup1">

        <Switch
            android:text="@string/sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sw"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="@string/auto_selektor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            tools:textColor="@color/colorAccent"
            android:layout_marginTop="15dp"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <Switch
            android:text="@string/auto_enable_ultra_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sw2"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:text="@string/select_battery_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"
            android:enabled="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/batterysb"
            android:max="100"
            android:progress="1"
            android:layout_marginTop="5dp"
            android:elevation="1dp"
            android:color="@color/colorAccent"
            android:thumbTint="@color/colorAccent"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SelPer"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textStyle="normal|italic"
            android:textColorLink="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Ubae"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textStyle="normal|italic"
            android:textColorLink="@color/colorAccent" />

    </LinearLayout>
</RelativeLayout>